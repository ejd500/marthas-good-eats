<html lang="en">
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>
    <%- include('./partials/nav.ejs') %>
    <body>       
        <div class="server-error">
            <h2>Internal Server Error 500</h2>
            <p>
                <%=locals.error%>
            </p>
            <a href="#" class="back-button" id="goBackLink">Try Again</a>
        </div>

        <script>
            document.getElementById("goBackLink").addEventListener("click", function(event) {
                event.preventDefault(); // Prevent the default behavior of the link
                history.back(); // Navigate back to the previous URL in the history stack
            });
        </script>
        
    </body>
    <%- include('./partials/footer.ejs') %>
</html>